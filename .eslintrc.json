{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "import/no-extraneous-dependencies": "off",
        "no-await-in-loop": "off",
        "prefer-const": "off",
        "no-restricted-syntax": "off",
        "no-undef": "off",
        "class-methods-use-this": "off",
        "no-shadow":"off",
        "no-empty-function": "off",
        "no-useless-constructor": "off",
        "camelcase": "off",
        "lines-between-class-members": "off",
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never"
            }
        ],
        "prettier/prettier": "error",
        "no-console":"off",
        "no-unused-vars": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
